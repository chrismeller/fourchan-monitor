{
  "name": "fourchan-monitor",
  "version": "0.0.2",
  "description": "",
  "author": "Chris Meller",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/chrismeller/fourchan-monitor.git",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf node_modules",
    "clean:db": "rimraf db",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:dev": "mikro-orm migration:up",
    "migrate:prod": "node dist/run-migrations"
  },
  "mikro-orm": {
    "useTsNode": true
  },
  "dependencies": {
    "@mikro-orm/core": "6.4.11",
    "@mikro-orm/nestjs": "6.1.1",
    "@mikro-orm/postgresql": "6.4.11",
    "@nestjs/axios": "3.1.3",
    "@nestjs/common": "10.4.15",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.15",
    "@nestjs/microservices": "10.4.15",
    "@nestjs/platform-express": "10.4.15",
    "better-sqlite3": "11.9.1",
    "nats": "2.29.3",
    "pg": "8.14.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.10",
    "rxjs": "7.8.2",
    "semver": "^7.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "6.4.11",
    "@mikro-orm/migrations": "6.4.11",
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.15",
    "@types/better-sqlite3": "7.6.12",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.11",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "copyfiles": "2.4.1",
    "eslint": "9.23.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "29.7.0",
    "supertest": "7.1.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
